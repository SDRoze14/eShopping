<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmPaymentActivity"
    android:orientation="horizontal"
    android:background="#BDBDBD">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relay_recycle_confirm"
            android:layout_width="400dp"
            android:layout_height="match_parent"
            android:background="#ffffff">

            <TextView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="รายการสินค้า"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="15dp"/>

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_below="@id/list"
                android:background="#ADADAD"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycle_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp">


            </androidx.recyclerview.widget.RecyclerView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/id_order_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID order "
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/id_order_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0967652541Cart00111442019062600"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/id_order_txt"/>

            <TextView
                android:id="@+id/name_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_order_confirm"
                android:text="นันทวัฒน์ ราชคม"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/name_user"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/total_price_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="จำนวนเงินที่ต้องชำระ"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/txt_total_money"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="500000 บาท"
                    android:textSize="25dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp"
                    android:gravity="right"/>

            </LinearLayout>

            <Button
                android:id="@+id/btn_confirm_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="ยืนยันการชำระ"
                android:textSize="17sp"
                android:background="@color/colorPrimary"
                android:padding="5dp"
                android:layout_marginBottom="20dp"/>

        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>