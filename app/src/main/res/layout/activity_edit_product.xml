<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProductActivity">

    <RelativeLayout
        android:id="@+id/bar_edit_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/close_edit_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ปิด"
            android:fontFamily="@font/prompt_medium"
            android:textSize="20sp"
            android:textColor="@color/colorAccent"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/txt_slogan_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="แก้ไขสินค้า"
            android:fontFamily="@font/prompt_medium"
            android:textAlignment="center"
            android:textSize="23sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/done_edit_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="บันทึก"
            android:fontFamily="@font/prompt_medium"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <ScrollView
        android:id="@+id/scroll_edit_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bar_edit_product">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linear_edit_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/txt_barcode"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:background="#88888888"
                    android:hint="รหัสสินค้า"
                    android:fontFamily="@font/prompt_medium"
                    android:textSize="20sp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:inputType="number"
                    android:importantForAutofill="no" />
            </LinearLayout>


            <!--Product Name-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/pname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linear_edit_product"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">


                <EditText
                    android:id="@+id/edit_pname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="ชื่อสินค้า"
                    android:fontFamily="@font/prompt_medium"
                    android:textSize="17sp"/>

            </com.google.android.material.textfield.TextInputLayout>

            <!--Product Price-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/pname"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">


                <EditText
                    android:id="@+id/edit_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="ราคา (บาท)"
                    android:fontFamily="@font/prompt_medium"
                    android:textSize="17sp"
                    android:inputType="number"/>

            </com.google.android.material.textfield.TextInputLayout>

            <Spinner
                android:id="@+id/spinner_pcategory"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/price"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/prompt_medium"/>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/pdescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/spinner_pcategory"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">


                <EditText
                    android:id="@+id/edit_pdescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="รายละเอียดสินค้า"
                    android:fontFamily="@font/prompt_medium"
                    android:textSize="17sp"
                    android:inputType="textMultiLine"/>

            </com.google.android.material.textfield.TextInputLayout>


            <!--Date & Time-->
            <LinearLayout
                android:id="@+id/linear_date_time_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pdescription"
                android:orientation="horizontal"
                android:layout_margin="20dp">

                <TextView
                    android:id="@+id/pdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="วันที่ : "
                    android:textSize="17sp"
                    android:fontFamily="@font/prompt_medium"/>

                <TextView
                    android:id="@+id/txt_pdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12/10/2019"
                    android:fontFamily="@font/prompt_medium"
                    android:textSize="17sp"
                    android:layout_marginRight="20dp"/>

                <TextView
                    android:id="@+id/ptime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="เวลา : "
                    android:fontFamily="@font/prompt_medium"
                    android:textSize="17sp"/>

                <TextView
                    android:id="@+id/txt_ptime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14:25:40"
                    android:fontFamily="@font/prompt_medium"
                    android:textSize="17sp"/>

            </LinearLayout>

            <!--    image -->
            <ImageView
                android:id="@+id/img_product"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_below="@id/linear_date_time_product"
                android:layout_margin="20dp"
                android:background="#555555"
                android:src="@drawable/ic_image_black_24dp"/>

        </RelativeLayout>


    </ScrollView>

</RelativeLayout>