<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StoreActivity">

    <TextView
        android:id="@+id/name_use_store"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_margin="15dp"
        android:gravity="center"/>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:layout_below="@+id/name_use_store"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:id="@+id/btn_add_new_product"
            android:layout_height="wrap_content"
            android:layout_width="135dp"
            android:orientation="vertical"
            android:background="#2196F3"
            android:gravity="center"
            android:padding="10dp"
            android:layout_margin="20dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_add_shopping_cart_black_24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="เพิ่มสินค้าใหม่"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/prompt_medium"/>

        </LinearLayout>

        <LinearLayout
        android:id="@+id/btn_view_product"
        android:layout_height="wrap_content"
        android:layout_width="135dp"
        android:orientation="vertical"
        android:background="#3F51B5"
        android:gravity="center"
        android:padding="10dp"
        android:layout_margin="20dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_format_list_bulleted_black_24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="รายการสินค้า"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/prompt_medium"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/promotion"
            android:layout_height="wrap_content"
            android:layout_width="135dp"
            android:orientation="vertical"
            android:background="#FF0000"
            android:gravity="center"
            android:padding="10dp"
            android:layout_margin="20dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_add_black_24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="เพิ่มโปรโมชั่น"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/prompt_medium"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/promotion_list"
            android:layout_height="wrap_content"
            android:layout_width="135dp"
            android:orientation="vertical"
            android:background="#FF5722"
            android:gravity="center"
            android:padding="10dp"
            android:layout_margin="20dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_format_list_bulleted_black_24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="เพิ่มโปรโมชั่น"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/prompt_medium"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_scan_bill"
            android:layout_height="wrap_content"
            android:layout_width="135dp"
            android:orientation="vertical"
            android:background="#4CAF50"
            android:gravity="center"
            android:padding="10dp"
            android:layout_margin="20dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_fullscreen_black_24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="สแกนใบเสร็จ"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/prompt_medium"/>

        </LinearLayout>



        <LinearLayout
            android:id="@+id/counter"
            android:layout_height="wrap_content"
            android:layout_width="135dp"
            android:orientation="vertical"
            android:background="#9C27B0"
            android:gravity="center"
            android:padding="10dp"
            android:layout_margin="20dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_store_black_24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="เค้าเตอร์"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/prompt_medium"/>

        </LinearLayout>


    </GridLayout>

    <Button
        android:id="@+id/btn_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_logout"
        android:text="ตั้งค่าบัญชี"
        android:textSize="21sp"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="@font/prompt"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="#ADADAD"/>

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ออกจากระบบ"
        android:textSize="21sp"
        android:textColor="@color/colorAccent"
        android:fontFamily="@font/prompt"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="#ADADAD"/>

