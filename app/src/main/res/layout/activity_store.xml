<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StoreActivity">

    <TextView
        android:id="@+id/name_use_store"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_margin="15dp"
        android:gravity="center"/>

    <RelativeLayout
        android:id="@+id/ralat_1"
        android:layout_below="@+id/name_use_store"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginRight="38dp"
        android:layout_marginLeft="38dp">

        <Button
            android:id="@+id/btn_add_new_product"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentLeft="true"
            android:text="Add new \nproduct"
            android:textAllCaps="false"
            android:textSize="17sp"
            android:background="#00BCD4"/>

        <Button
            android:id="@+id/btn_view_product"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentRight="true"
            android:text="View lise \nproduct"
            android:textAllCaps="false"
            android:textSize="17sp"
            android:background="#FFEB3B"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ralat_2"
        android:layout_below="@+id/ralat_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginRight="38dp"
        android:layout_marginLeft="38dp">

        <Button
            android:id="@+id/btn_scan_bill"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentLeft="true"
            android:text="Scan bill"
            android:textAllCaps="false"
            android:textSize="17sp"
            android:background="#FF5722"/>

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentRight="true"
            android:text="Logout"
            android:textAllCaps="true"
            android:textSize="17sp"
            android:background="#FF0000"/>


    </RelativeLayout>

