<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListActivity">

    <RelativeLayout
        android:id="@+id/linear_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="10dp">

        <TextView
            android:id="@+id/id_cart_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="รหัสรถเข็น : Cart001"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/prompt_medium"/>

        <ImageView
            android:id="@+id/close_list"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_close_black_24dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_list"
        android:layout_above="@+id/list_total_price">


    </androidx.recyclerview.widget.RecyclerView>

    <Button
        android:id="@+id/pay_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="ชำระเงิน"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:background="@color/colorPrimary"
        android:fontFamily="@font/prompt_medium"/>

    <TextView
        android:id="@+id/list_total_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pay_list"
        android:background="@color/colorPrimaryDark"
        android:text="ราคาทั้งหมด = "
        android:textSize="22sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:fontFamily="@font/prompt_medium"/>


</RelativeLayout>