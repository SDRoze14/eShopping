<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PromotionActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_promotion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/back_promotion"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_arrow_back_24dp"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="เพิ่มโปรโมชั่น"
                android:textSize="17sp"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/prompt_medium"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:id="@+id/scroll_promo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_promotion">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/view_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp">

                <EditText
                    android:id="@+id/pcode_promo"
                    android:layout_width="220dp"
                    android:layout_height="45dp"
                    android:background="#CACACA"
                    android:hint="กรอกหรือสแกนรหัสสินค้า"
                    android:textSize="17sp"
                    android:textAlignment="center"
                    android:padding="3dp"
                    android:fontFamily="@font/prompt_extralight"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"/>

                <Button
                    android:id="@+id/btn_scan_pcode_promo"
                    android:layout_width="100dp"
                    android:layout_height="45dp"
                    android:text="สแกน"
                    android:textSize="17sp"
                    android:fontFamily="@font/prompt"
                    android:textColor="@color/colorPrimaryDark"
                    android:textAlignment="center"
                    android:layout_alignParentRight="true"
                    android:background="@color/colorPrimary"/>

            </RelativeLayout>

            <Spinner
                android:id="@+id/type_promotion"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@+id/view_code"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"/>

            <!--///////////////////////////////////////////////////////////////////////////////////////-->
            <LinearLayout
                android:id="@+id/date_promo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/type_promotion"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="เริ่มโปรโมชั่น"
                    android:textSize="20sp"
                    android:fontFamily="@font/prompt_medium"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="37dp"/>

                <LinearLayout
                    android:id="@+id/date_start_promo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/date_start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="วว/ดด/ปปปป"
                        android:textSize="20sp"
                        android:fontFamily="@font/prompt"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_arrow_drop_down_black_24dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"/>

                </LinearLayout>

            </LinearLayout>

            <!--////////////////////////////////////////////////////////////////////////////////-->
            <LinearLayout
                android:id="@+id/time_promo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/date_promo"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="สิ้นสุดโปรโมชั่น"
                    android:textSize="20sp"
                    android:fontFamily="@font/prompt_medium"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp"/>

                <LinearLayout
                    android:id="@+id/date_end_promo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/date_end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="วว/ดด/ปปปป"
                        android:textSize="20sp"
                        android:fontFamily="@font/prompt"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_arrow_drop_down_black_24dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"/>

                </LinearLayout>

            </LinearLayout>


            <ImageView
                android:id="@+id/img_promotion"
                android:layout_width="fill_parent"
                android:layout_height="320dp"
                android:layout_below="@+id/time_promo"
                android:layout_margin="15dp"
                android:background="#acb"/>

            <ImageView
                android:layout_width="70dp"
                android:layout_height="320dp"
                android:layout_below="@+id/time_promo"
                android:layout_margin="15dp"
                android:src="@drawable/ic_add_to_photos_black_24dp"
                android:layout_centerHorizontal="true"/>

            <Button
                android:id="@+id/promotion_done"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ยืนยัน"
                android:textSize="20sp"
                android:textColor="@color/design_default_color_primary_dark"
                android:fontFamily="@font/prompt_medium"
                android:layout_below="@+id/img_promotion"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="20dp"
                android:background="@color/colorPrimary"/>

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>