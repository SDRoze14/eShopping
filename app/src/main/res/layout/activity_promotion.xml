<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PromotionActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_promotion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/back_promotion"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_arrow_back_24dp"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="เพิ่มโปรโมชั่น"
                android:textSize="17sp"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/prompt_medium"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/done_promotion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="บันทึก"
                android:textSize="17sp"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/prompt_medium"
                android:layout_alignParentRight="true"
                android:layout_marginRight="17dp"/>
        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/view_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_promotion"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp">

        <EditText
            android:id="@+id/pcode_promo"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:background="#888888"
            android:text="กรอกหรือสแกนรหัสสินค้า"
            android:textSize="17sp"
            android:padding="3dp"
            android:textAlignment="center"
            android:fontFamily="@font/prompt_extralight"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>

        <Button
            android:id="@+id/btn_scan_pcode_promp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="สแกน"
            android:textSize="17sp"
            android:fontFamily="@font/prompt"
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="center"
            android:layout_alignParentRight="true"
            android:background="@color/colorPrimary"/>

    </RelativeLayout>

    <Spinner
        android:id="@+id/type_promotion"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/view_code"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>

    <FrameLayout
        android:id="@+id/frame_promotion"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/type_promotion"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"/>

</RelativeLayout>