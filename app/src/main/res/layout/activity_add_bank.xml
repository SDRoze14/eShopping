<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddBankActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_add_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/back_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_back_24dp"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="เชื่อมบัญชีธนาคาร"
                android:textSize="20sp"
                android:layout_centerInParent="true"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/prompt_medium"/>
        </RelativeLayout>


    </androidx.appcompat.widget.Toolbar>
    <View
        android:id="@+id/sd"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@drawable/shadow_top"
        android:layout_below="@+id/toolbar_add_money"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar_add_money"
        android:background="#C0C0C0">

        <RelativeLayout
            android:id="@+id/sp_bank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:layout_margin="10dp">
            <Spinner
                android:id="@+id/spinner_bank"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ATM_No"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sp_bank"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="3dp"
            android:background="#ffffff">

            <TextView
                android:id="@+id/txtv_card_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="เลขบัตร ATM (ATM Card No.)"
                android:textSize="17sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="7dp"/>

            <EditText
                android:id="@+id/atm_card_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtv_card_no"
                android:hint="เช่น 1234 5678 9012 3456"
                android:textSize="17sp"
                android:inputType="number"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="7dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ATM_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ATM_No"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#ffffff">

            <TextView
                android:id="@+id/txtv_card_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="รหัสบัตร ATM (ATM PIN No.)"
                android:textSize="17sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="7dp"/>

            <EditText
                android:id="@+id/atm_card_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtv_card_pass"
                android:hint="กรุณาใส่รหัส"
                android:textSize="17sp"
                android:inputType="numberPassword"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="7dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ID_Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ATM_pass"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="3dp"
            android:background="#ffffff">

            <TextView
                android:id="@+id/txtv_id_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="เลขบัตรประชาชน (ID Card No.)"
                android:textSize="17sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="7dp"/>

            <EditText
                android:id="@+id/id_card_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtv_id_card"
                android:hint="เช่น 1 2345 67890 12 3"
                android:textSize="17sp"
                android:inputType="numberPassword"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="7dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Birth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ID_Card"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="3dp"
            android:background="#ffffff">

            <TextView
                android:id="@+id/txtv_birth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="เลขบัตรประชาชน (ID Card No.)"
                android:textSize="17sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="7dp"/>

            <RelativeLayout
                android:id="@+id/date_of_birth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtv_birth"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp">

                <TextView
                    android:id="@+id/birthday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="กรุณาเลือกวันเกิด"
                    android:textSize="17sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="15dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_drop_down_black_24dp"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

        </RelativeLayout>

        <Button
            android:id="@+id/btn_add_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Birth"
            android:text="ยืนยัน"
            android:textSize="17sp"
            android:background="@color/colorPrimary"
            android:fontFamily="@font/prompt_medium"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

    </RelativeLayout>

</RelativeLayout>