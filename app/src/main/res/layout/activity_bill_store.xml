<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BillStoreActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_bill_store"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/close_bill_store"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_close_black_24dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"/>

            <TextView
                android:id="@+id/id_order_bill_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order ID : 09676525411210201991624"
                android:textSize="15sp"
                android:fontFamily="@font/prompt"
                android:layout_marginLeft="15dp"/>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@id/toolbar_bill_store"
        android:background="@drawable/shadow_top"/>

    <LinearLayout
        android:id="@+id/linear_bill_store"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_bill_store"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/date_bill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11/15/2019"
            android:layout_marginRight="20dp"/>

        <TextView
            android:id="@+id/time_bill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11:37"
            android:layout_marginLeft="20dp"/>


    </LinearLayout>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#C0C0C0"
        android:layout_below="@id/linear_bill_store"
        android:layout_margin="10dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle_bil_store"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line1"
        android:layout_above="@+id/new_scan_bill"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp">

    </androidx.recyclerview.widget.RecyclerView>

    <Button
        android:id="@+id/new_scan_bill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="สแกนใบเสร็จใหม่"
        android:textSize="17sp"
        android:fontFamily="@font/prompt_medium"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/colorPrimary"/>

</RelativeLayout>